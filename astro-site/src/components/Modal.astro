---
const { id } = Astro.props;
---

<div
  id={id}
  class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/50 backdrop-blur-sm transition-all duration-200"
  role="dialog"
  aria-modal="true"
>
  <div
    class="bg-white dark:bg-gray-900 text-black dark:text-white rounded-2xl shadow-2xl p-6 max-w-md w-full relative transform transition-all duration-200 scale-100"
  >
    <button
      class="absolute top-3 right-4 text-2xl font-bold text-gray-500 hover:text-gray-700 dark:hover:text-gray-300"
      onclick={`document.getElementById('${id}').classList.add('hidden'); document.body.style.overflow = ''`}
      aria-label="Close modal"
    >
      &times;
    </button>
    <slot />
  </div>
</div>
