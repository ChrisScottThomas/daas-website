---
import Base from "../layouts/base.astro";
---

<Base title="Page Not Found — Clarity.">
  <main class="max-w-xl mx-auto px-4 py-24 text-center">
    <h1 class="text-5xl font-bold mb-6">404 — Not Found</h1>
    <p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
      Sorry, we couldn’t find the page you’re looking for.
    </p>
    <a
      href="/"
      class="inline-block mt-4 px-6 py-3 bg-black text-white rounded hover:bg-gray-800 transition"
    >
      Return to Homepage
    </a>
  </main>
</Base>
