---
import '../styles/base.css';
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DaaS Waitlist</title>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <main class="max-w-xl mx-auto mt-20 px-4 text-center">
      <h1 class="text-3xl font-bold mb-2">Unlock Faster, Smarter Discovery</h1>
      <p class="mb-4">Join the waitlist to be first in line for our Discovery-as-a-Service launch.</p>
      <form id="waitlist-form" class="space-y-4">
        <input
          type="email"
          name="email"
          required
          placeholder="you@example.com"
          class="w-full px-4 py-2 border rounded"
        />
        <button
          type="submit"
          class="w-full py-2 px-4 bg-black text-white rounded font-medium"
        >
          Join the Waitlist
        </button>
      </form>
      <p id="response" class="mt-4 text-green-600"></p>
      <script>
        document.getElementById('waitlist-form').addEventListener('submit', async (e) => {
          e.preventDefault();
          const email = e.target.email.value;
          const res = await fetch('API_URL_HERE', {
            method: 'POST',
            body: JSON.stringify({ email }),
            headers: { 'Content-Type': 'application/json' },
          });
          if (res.ok) {
            window.location.href = '/thank-you';
          } else {
            document.getElementById('response').textContent = 'Something went wrong. Please try again.';
          }
        });
      </script>
    </main>
  </body>
</html>
